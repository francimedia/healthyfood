{% extends "layouts/app.twig" %}


{% block calToday %}
    <ul class="events-today">

    </ul>
{% endblock %}

{% block calTomorrow %}
    <ul>

    </ul>
{% endblock %}

{% block calFull %}
    <ul>

    </ul>
{% endblock %}


{% block map %}
    <div id="map-container">
        <a href="#" id="map-close" class="icon close btn-map mhide"></a>

        <div class="map" id="map-overlay"></div>
        <div class="map cal-push" id="map">
            {#<a href="#" class="zoomer zoomin">+</a>#}
            {#<a href="#" class="zoomer zoomout">-</a>#}
        </div>
        <a href="#" id="geolocate" class="btn-map">Find me</a>
        {% block navCalendar %}
            <section id="calendar-nav" class="cal-push">
                <nav class="groupbar">
                    <a href="#" id="calendarToday" data-content="cal-today" class="aStores">Today</a>
                    <a href="#" id="calendarTomorrow" data-content="cal-tomorrow">Tomorrow</a>
                    <a href="#" id="calendarFull" data-content="cal-full" class="icon calendar"></a>
                </nav>
            </section>
        {% endblock %}
    </div>
{% endblock %}


{% block subpage %}
    <section id="subpage">
        <header data-back="left" class="main-header">
            <nav class="">
                <ul>
                    <li><a href="#aside-menu" data-router="aside" data-icon="menu"></a></li>
                    <li class="title centered app-name">
                        <h1>Healthy food</h1>
                    </li>
                </ul>
            </nav>
        </header>

        <article class="active scroll">
            <img src="/assets/images/sample1.png">
            <div class="form" style="padding: 20px;">
                <h3 class="locationDetail store-title"></h3>
                <b class="locationDetail store-location"></b>
                <b>(<span class="locationDetail store-distance"></span>)</b>

                <br><br>
                <h3 class="locationDetail user-action">Please help us filling our "BIG APPLE INDEX"</h3>
                    
                <span class="price-response"></span>
                <br/>
                <label style="font-weight: bold; color: #333">What's the price for one apple?</label>
                <select class="price single" name="price" style="margin-top: 7px">
                    <option value="0">$ -</option>
                    <option value="10">$0.10</option>
                    <option value="20">$0.20</option>
                    <option value="30">$0.30</option>
                    <option value="40">$0.40</option>
                    <option value="50">$0.50</option>
                    <option value="60">$0.60</option>
                    <option value="70">$0.70</option>
                    <option value="80">$0.80</option>
                    <option value="90">$0.90</option>
                    <option value="100">$1.00</option>
                    <option value="110">$1.10</option>
                    <option value="120">$1.20</option>
                    <option value="130">$1.30</option>
                    <option value="140">$1.40</option>
                    <option value="150">$1.50</option>
                </select>

                <label>OR: What's the price for 1 LBS of apples?</label> 
                <select class="price per-pound" name="price_per_lbs" style="margin-top: 7px">
                    <option value="0">$ -</option>
                    <option value="25">$0.25</option>
                    <option value="50">$0.50</option>
                    <option value="75">$0.75</option>
                    <option value="100">$1.00</option>
                    <option value="125">$1.25</option>
                    <option value="150">$1.50</option>
                    <option value="175">$1.75</option>
                    <option value="200">$2.00</option>
                    <option value="225">$2.25</option>
                    <option value="250">$2.50</option>
                    <option value="275">$2.75</option>
                    <option value="300">$3.00</option>
                    <option value="325">$3.25</option>
                    <option value="350">$3.50</option>
                    <option value="375">$3.75</option>
                    <option value="400">$4.00</option>
                </select>

                <p>
                    <em>The average apple weighs 150 grams, 0.3 pounds/lbs or 5 ounces</em>
                </p>
                <br>

                <input type="submit" class="button" value="submit" id="submit-price">
                <br><br><br>
            </div>

        </article>

        <footer class="main-footer">
            <nav>
                <a href="#home" class="active" data-icon="home" data-router="section"></a>
                <a href="#home" id="link-profile" data-icon="users" data-router="section"></a>
                <a href="#home" data-icon="search" data-router="section"></a>
                <a href="#home" data-router="section" class="logo-text"></a>
            </nav>
        </footer>
    </section>
{% endblock %}



{% block scripts %}
    <script src="assets/app/app.js?v=0.3"></script>
{% endblock %}